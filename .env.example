# DeepDive Analyst 环境配置模板
# 复制此文件为 .env 并填入真实的 API 密钥

# LLM 提供商配置
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
# 对于Gemini，使用格式: gemini/gemini-1.5-pro 或 gemini/gemini-1.5-flash
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# LLM 基础URL配置（用于自定义部署）
LLM_BASE_URL=

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API 配置
GEMINI_API_KEY=your_gemini_api_key_here

# 阿里通义千问 API 配置
QWEN_API_KEY=your_qwen_api_key_here

# Anthropic Claude API 配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily 搜索API配置
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith 配置 (可选，但强烈推荐)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=deepdive-analyst
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# 搜索配置
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=30

# 报告配置
DEFAULT_OUTPUT_FILE=report.md
MAX_REPORT_LENGTH=10000
